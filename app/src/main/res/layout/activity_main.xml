<?xml version="1.0" encoding="utf-8"?>


<android.support.v4.widget.DrawerLayout
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="close"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:title="@string/app_name"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="45dp" />


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior"
    android:paddingBottom="1dp"
    android:paddingLeft="1dp"
    android:paddingRight="1dp"
    android:paddingTop="1dp"
    android:background="@color/cardview_shadow_start_color"
    tools:context="com.teamninjas.tech_ninjas.Main"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--android:background="@color/cardview_dark_background">-->


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@color/cardview_shadow_end_color">
            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/main_image"
                android:src="@drawable/logo"
                android:scaleType="fitXY"
                android:layout_height="250dp"
                android:layout_marginBottom="10dp" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_image"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                    android:text="MODEL : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/main_model_heading"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:text="model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/main_model"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp" />

                    <TextView
                        android:text="PRICE : "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/main_price_heading"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/colorAccent" />

                    <TextView
                        android:text="price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/main_price"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp" />

                    <TextView
                        android:text="ENGINE : "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/main_engine_heading"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/colorAccent"/>

                    <TextView
                        android:text="engine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/main_engine"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp" />

                    <TextView
                        android:text="COLORS : "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/main_colors_heading"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/colorAccent"/>

                    <TextView
                        android:text="colors"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/main_colors"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp" />

                    <TextView
                        android:text="VARIANTS :"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/main_variants_heading"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/colorAccent"/>

                    <TextView
                        android:text="variants"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/main_variants"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>

    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView

        android:layout_width="300dp"
        android:id="@+id/navigaitonVIew"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/header_drawer"
        app:itemIconTint="#FF1744"
        />


    </android.support.v4.widget.DrawerLayout>