<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:paddingBottom="1dp"
    android:paddingLeft="1dp"
    android:paddingRight="1dp"
    android:paddingTop="1dp"
    android:background="@color/cardview_shadow_start_color"
    tools:context="com.teamninjas.tech_ninjas.Main"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--android:background="@color/cardview_dark_background">-->


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@color/cardview_shadow_end_color">
            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/main_image"
                android:src="@drawable/demo_image"
                android:layout_height="250dp"
                android:layout_marginBottom="10dp" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_image"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                    android:text="MODEL : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/main_model_heading"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:text="model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/main_model"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp" />

                    <TextView
                        android:text="PRICE : "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/main_price_heading"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/colorAccent" />

                    <TextView
                        android:text="price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/main_price"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp" />

                    <TextView
                        android:text="ENGINE : "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/main_engine_heading"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/colorAccent"/>

                    <TextView
                        android:text="engine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/main_engine"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp" />

                    <TextView
                        android:text="COLORS : "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/main_colors_heading"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/colorAccent"/>

                    <TextView
                        android:text="colors"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/main_colors"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp" />

                    <TextView
                        android:text="VARIANTS :"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/main_variants_heading"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/colorAccent"/>

                    <TextView
                        android:text="variants"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/main_variants"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
